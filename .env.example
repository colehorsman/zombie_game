# Sonrai API Configuration
SONRAI_API_URL=https://YOUR_ORG-graphql-server.sonraisecurity.com/graphql
SONRAI_ORG_ID=your_org_id_here
SONRAI_API_TOKEN=your_api_token_here

# AWS Account Filter (optional - leave blank to fetch all accounts)
AWS_ACCOUNT=
DAYS_SINCE_LAST_LOGIN=0

# Game Configuration
GAME_WIDTH=1280          # Base rendering resolution (width)
GAME_HEIGHT=720          # Base rendering resolution (height)
FULLSCREEN=false         # Start in fullscreen mode (true/false) - toggle with F11
TARGET_FPS=60

# Level Entry Configuration
AUTO_START_ARCADE=true                                      # Skip menu, auto-start arcade mode for Sandbox
LEVEL_ENTRY_MODE_SELECTOR_ENABLED=true                      # Show mode selection menu (if AUTO_START_ARCADE=false)
DEFAULT_LEVEL_ENTRY_MODE=arcade                             # Default highlighted mode: "arcade" or "story"

# Photo Booth Configuration (Arcade Mode selfie feature)
PHOTO_BOOTH_ENABLED=true                                    # Enable/disable photo booth
PHOTO_BOOTH_CAMERA_INDEX=0                                  # Webcam device index (0 = default)
PHOTO_BOOTH_EVENT_NAME=AWS re:Invent 2025                   # Event name on photo
PHOTO_BOOTH_BOOTH_NUMBER=435                                # Booth number on photo
PHOTO_BOOTH_QR_URL=https://sonraisecurity.com/zombie-blaster  # QR code destination
PHOTO_BOOTH_HASHTAG=#SonraiZombieBlaster                    # Hashtag on photo
PHOTO_BOOTH_OUTPUT_DIR=.kiro/evidence/booth_photos          # Output directory
PHOTO_BOOTH_CONSENT_TIMEOUT=5.0                             # Seconds before auto-declining selfie
