# Bandit configuration file for SAST (Static Application Security Testing)
# Bandit scans Python code for common security issues

[bandit]
# Paths to exclude from scanning
exclude_dirs = [
    "/tests/",
    "/venv/",
    "/env/",
    "/.venv/",
    "/build/",
    "/dist/"
]

# Security issue severity levels to report (LOW, MEDIUM, HIGH)
# Only report MEDIUM and HIGH by default
level = MEDIUM

# Confidence levels to report (LOW, MEDIUM, HIGH)
confidence = MEDIUM

# Specific tests to skip (use test IDs like B101, B201, etc.)
# Add test IDs here if you get false positives
skips = []

# File extensions to scan
include = ["*.py"]
